ARCH_PACKAGES="
libxext
libxcb
libxdamage
libxfixes
libxshmfence
libxcursor
libxkbcommon-x11
libjpeg-turbo
libinput
libdrm
cairo
mtdev
wayland
wayland-protocols
xtrans
xorgproto
xcb-util-keysyms
xorg-xinit
xorg-fonts
xorg-fonts-misc
xorg-xsetroot
terminus-font
ttf-dejavu
noto-fonts
xterm
mesa-demos
libepoxy
xf86-input-libinput
xorg-server
onboard
networkmanager
bluez
bluez-utils
bluez-tools
gnome-session
gnome-control-center
gdm
nautilus
gnome-terminal
weston
wayland
wayland-protocols
"

EXCLUDED="
weston
wayland
wayland-protocols
"


status "Using qemu to install required packages on target FS..."
run_in_qemu pacman -Syu --needed --noconfirm $ARCH_PACKAGES

status "Fixing symlinks in target FS' /usr/lib/..."
LINKS=$(find $SYSROOT/usr/lib -type l -not -path "*/usr/lib/modules/*")
for LINK in $LINKS; do
    L=$(readlink $LINK)
    if [[ "$L" = /* ]]; then
        ABS="${SYSROOT}${L}"
        echo Fixing $LINK...
        rm -f $LINK
        ln -sfr $ABS $LINK
    fi
done
